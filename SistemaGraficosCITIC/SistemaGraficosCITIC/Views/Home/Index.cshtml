@{
    ViewData["Title"] = "Home Page";
}

@if (User.IsInRole("Admin"))
{
    <div style="margin:0px;padding:0px;overflow:hidden">
       <iframe title="Report Section" width="100%" height="100%" src="https://app.powerbi.com/view?r=eyJrIjoiMTgzNTZlNjktNmJjOS00Yzc3LWI4OGYtYmU1MmUxN2ZkMzU1IiwidCI6ImU3OTg0Y2FjLTI1NDMtNGY4OC04Zjk3LTk1MjQzMzVlNmJjNCIsImMiOjR9" frameborder="0" allowFullScreen="true"></iframe>
    </div>
    }
else
{
    <div class="parent-container" style="justify-content: center;">

        <div class="row align justify-content-center" style="margin-top: 50px;">
        
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
