@using SistemaGraficosCITIC.Controllers

@model SistemaGraficosCITIC.Views.ViewModels.ProjectModel

@{
    ViewData["Title"] = "Create";
}

<div class="container">

    @if (User.Identity.IsAuthenticated)
    {
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

        <h1>Create</h1>

        <h4>Project</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Type" class="control-label"></label>
                        <input asp-for="Type" class="form-control" />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="isActive" class="control-label">Is the project active?</label>
                        <input id="CheckBoxActive" type="checkbox" asp-for="isActive" />
                        <span asp-validation-for="isActive" class="text-danger"></span>
                    </div>
                    <br />
                    <div id="EndDateDiv" class="form-group">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <br />



                    <hr />
                        <div class="accordion mt-3" id="accordionExample">

                          <div class="accordion-item">
                            <h2 class="accordion-header">
                              <button class="accordion-button collapsed mt-3" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne">
                                Publicaciones asociadas:  @Model.CounterPublications
                              </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse collapse" data-bs-parent="#accordionExample" style="">
                              <div class="accordion-body">
            
                                    <button id="addPubliButton" type="button" class="btn btn-primary" onclick="buttonAddPublications(this)"><strong>+</strong></button>

                                <div id="publications">
                                    <!-- Muestre cards tantas veces como lo que tiene el contador -->
                                    @for(int i=0; i<@Model.CounterPublications; i++)
                                    {
                                        <div class="card  mt-3" style="width: 18rem;">
                                            <div class="card-body">
                                                <h5 class="card-title">Publicación</h5>

                                                <div class="form-floating">
                                                    <input id="" class="form-control" autocomplete="" aria-required="true" />
                                                    <label class="form-label">Título</label>
                                                </div>
                                                <div class="form-floating">
                                                    <label type="Date" class="control-label"></label>
                                                    <input type="Date" class="form-control" />
                                                </div>
                                                <div class="form-floating">
                                                    <input id="" class="form-control" autocomplete="" aria-required="true" />
                                                    <label class="form-label">Referencia</label>
                                                </div>
                                                <div class="form-floating mt-3">
                                                    <select class="form-select" aria-label="Default select example">
                                                    </select>
                                                    <label class="form-label">Tipo</label>
                                                    <span class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                    }

                                </div>
            
                              </div>
                            </div>
                          </div>

                          <div class="accordion-item">
                            <h2 class="accordion-header">
                              <button class="accordion-button collapsed " type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Exposiciones:  @Model.CounterExpositions
                              </button>
                            </h2>
                            <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                              <div class="accordion-body">
            
                                    <button type="button" class="btn btn-primary  mt-3"><strong>+</strong></button>
            
                                <div class="card  mt-3" style="width: 18rem;">
                                  <div class="card-body">
                                    <h5 class="card-title">Exposición</h5>
                
                                    <div class="form-floating">
                                        <input id="" class="form-control" autocomplete="" aria-required="true" />
                                        <label class="form-label">Título</label>
                                    </div>
                                    <div class="form-floating">
                                        <input id="" class="form-control" autocomplete="" aria-required="true" />
                                        <label class="form-label">Fecha</label>
                                    </div>
                                    <div class="form-floating">
                                        <input id="" class="form-control" autocomplete="" aria-required="true" />
                                        <label class="form-label">Ubicación</label>
                                    </div>
                                    <div class="form-floating">
                                        <input id="" class="form-control" autocomplete="" aria-required="true" />
                                        <label class="form-label">Contexto</label>
                                    </div>
                                  </div>
                                </div>
            
                              </div>
                            </div>
                          </div>

                          <div class="accordion-item">
                            <h2 class="accordion-header">
                              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Productos:  @Model.CounterProducts
                              </button>
                            </h2>
                            <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                              <div class="accordion-body">
            
                                    <button type="button" class="btn btn-primary mt-3"><strong>+</strong></button>
            
                                <div class="card  mt-3" style="width: 18rem;">
                                  <div class="card-body">
                                    <h5 class="card-title">Exposición</h5>
                
                                    <div class="form-floating">
                                        <input id="" class="form-control" autocomplete="" aria-required="true" />
                                        <label class="form-label">Nombre</label>
                                    </div>
                                    <div class="form-floating">
                                        <input id="" class="form-control" autocomplete="" aria-required="true" />
                                        <label class="form-label">Descripción</label>
                                    </div>
                                    <div class="form-floating">
                                        <input id="" class="form-control" autocomplete="" aria-required="true" />
                                        <label class="form-label">Estado</label>
                                    </div>
                                    <div class="form-floating">
                                        <input id="" class="form-control" autocomplete="" aria-required="true" />
                                        <label class="form-label">Licencia</label>
                                    </div>
                                    <div class="form-floating">
                                        <div class="form-check form-switch">
                                          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                                          <label class="form-check-label" for="flexSwitchCheckDefault">Comercializable</label>
                                        </div>
                                    </div>  
                                  </div>
                                </div>
            
                              </div>
                            </div>
                          </div>
                        </div>
                    <hr />



                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script>
            $(document).ready(function () {
                $("#CheckBoxActive").change(function () {
                    if ($(this).is(":checked")) {
                        $("#EndDateDiv").hide();
                    } else {
                        $("#EndDateDiv").show();
                    }
                });
            });
        </script>

        <script>
            function buttonAddPublications(x) {
                var div = document.getElementById("publications");
                
                var formularioHTML = `
                                    <div class="card  mt-3" style="width: 18rem;">
                                        <div class="card-body">
                                            <h5 class="card-title">Publicación</h5>

                                            <div class="form-floating">
                                                <input id="" class="form-control" autocomplete="" aria-required="true" />
                                                <label class="form-label">Título</label>
                                            </div>
                                            <div class="form-floating">
                                                <label type="Date" class="control-label"></label>
                                                <input type="Date" class="form-control" />
                                            </div>
                                            <div class="form-floating">
                                                <input id="" class="form-control" autocomplete="" aria-required="true" />
                                                <label class="form-label">Referencia</label>
                                            </div>
                                            <div class="form-floating mt-3">
                                                <select class="form-select" aria-label="Default select example">
                                                </select>
                                                <label class="form-label">Tipo</label>
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                        `;
                div.insertAdjacentHTML("beforeend", formularioHTML)
            }
        </script>

        <script>

            function addPublication() { @Model.CounterPublications++; }

            function addExposition() { @Model.CounterExpositions++; }

            function addProduct() { @Model.CounterProducts++; }

            $(document).ready(function () {
                // Bind + button to event
                $('#addPubliButton').click(function () { refreshPublications(); });

                // Function to refresh the section
                function refreshPublications() {
                    @Model.CounterPublications++;
                    $.ajax({
                        url: '/ProjectsController/AddPublication',
                        type: 'GET',
                        success: function (result) {
                            // Update element
                            $('#refreshPublications').html(result);
                        },
                        error: function (xhr, status, error) { console.log(error); }
                    });
                }
            });

        </script>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
    }else{
        <h1>Please sign in to create new proyects</h1>
    }

</div>