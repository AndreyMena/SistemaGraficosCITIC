@model SistemaGraficosCITIC.Models.Domain.Publication

@{
    ViewData["Title"] = "Eliminar publicación";
}

<h3>¿Estás seguro que deseas eliminar esta publicación?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <p>Nombre</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            <p>Fecha</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt class = "col-sm-2">
            <p>Referencia</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reference)
        </dd>
        <dt class = "col-sm-2">
            <p>Tipo</p>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Borrar" class="btn btn-danger mt-3" />
        <div class="mt-3">
            <a asp-action="Index" asp-controller="Projects">Volver a la lista</a>
        </div>
    </form>
</div>
