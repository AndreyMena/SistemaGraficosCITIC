@model PublicationModel

@{
    ViewData["Title"] = "Create";
    var project = ViewContext.RouteData.Values["projectId"];
}


<div class="container">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <h2>Create Project</h2>
    <p>Step 2</p>

    <div class="progress mt-3" role="progressbar" aria-label="Basic example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
        <div class="progress-bar" style="width: 50%"></div>
    </div>

    <hr />

    <h5>Publications</h5>

    <div class="form-floating mt-3">
        <input class="form-control" />
        <label class="control-label">Title</label>
    </div>

    <div class="form-floating mt-3">
        <input type="Date" class="form-control" />
        <label class="control-label">Date</label>
    </div>

    <div class="form-floating mt-3">
        <input class="form-control" />
        <label class="control-label">Reference</label>
    </div>

    <div class="form-floating mt-3">
        <select asp-for="PublicationType" id="PublicationsType${contador}" class="form-select" aria-label="Default select example">
            <option value="Conference">Conference</option>
            <option value="Journal">Journal</option>
            <option value="Magazine">Magazine</option>
        </select>
        <label class="form-label">Type</label>
    </div>

    <div class="form-floating mt-3">
        <button type="button" class="btn btn-warning" href="">Skip (No publications)</button> <!-- TODO: Poner la dirección en el href -->
        <button type="button" class="btn btn-primary" onclick="">Save</button>
    </div>

</div>



<hr />
<hr />

<div>Project ID: @project</div>
<h1>Create</h1>

<h4>Publication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PublicationTitle" class="control-label"></label>
                <input asp-for="PublicationTitle" class="form-control" />
                <span asp-validation-for="PublicationTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationDate" class="control-label"></label>
                <input asp-for="PublicationDate" class="form-control" />
                <span asp-validation-for="PublicationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationReference" class="control-label"></label>
                <input asp-for="PublicationReference" class="form-control" />
                <span asp-validation-for="PublicationReference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationType" class="control-label"></label>
                <input asp-for="PublicationType" class="form-control" />
                <span asp-validation-for="PublicationType" class="text-danger"></span>
            </div>
            <div class="form-group" type="hidden">
                <label asp-for="ProjectId" class="control-label"></label>
                <input asp-for="ProjectId" class="form-control" value="@project" />
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
