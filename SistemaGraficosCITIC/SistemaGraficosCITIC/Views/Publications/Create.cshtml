@model PublicationModel

@{
    ViewData["Title"] = "Agregar publicación";
    var projectId = ViewData["projectId"];
    var projectName = ViewData["projectName"];
}
<div class="container">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <h2>Crear Publicación</h2>
    <p>Proyecto: <b> @projectName </b></p>
    

    <hr />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating mt-3">
                    <input value="" asp-for="PublicationTitle" class="form-control" />
                    <label asp-for="PublicationTitle" class="control-label">Título</label>
                    <span asp-validation-for="PublicationTitle" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input type="number" id="year" min="1960" max="2200" step="1" value="2023" asp-for="PublicationYear" class="form-control" />
                    
                    <label asp-for="PublicationYear" class="control-label">Año</label>
                    <span asp-validation-for="PublicationYear" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input value="" asp-for="PublicationReference" class="form-control" />
                    <label asp-for="PublicationReference" class="control-label">Referencia</label>
                    <span asp-validation-for="PublicationReference" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <select asp-for="PublicationType" id="PublicationsType${contador}" class="form-select" aria-label="Default select example">
                        <option value="Conference">Conferencia</option>
                        <option value="Other">Otro</option>
                    </select>
                    <label class="form-label">Tipo</label>
                </div>

                <div class="form-floating mt-3">
                    <div class="table-responsive">
                        <table class="table table-borderless text-center" id="table_field">
                            <label asp-for="PublicationAuthor" class="control-label m-1">Autor(es)</label>
                            <tr>
                                <td><input asp-for="PublicationAuthor" type="text" class="form-control" name="PublicationAuthor" required></td>
                                <td><input class="btn btn-danger invisible" name="remove" id="remove" value="X" type="button"></td>
                            </tr>
                        </table> 
                        <div class="text-right">
                            <input type="button" name="add" id="add" value="Agregar autor" class="btn btn-success">
                        </div>
                    </div>
                </div>

                <div class="form-floating mt-3" type="hidden">
                    <input type="hidden" asp-for="ProjectId" class="form-control" value="@projectId" />
                </div>
                <hr />
                <div class="form-floating mt-3">
                    @*<input type="button" class="btn btn-warning" value="Omitir" onclick="location.href='@Url.Action("Skip", "Publications", new { projectId=@projectId })'" />*@
                    <button id="btnGuardar" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Guardar</button>
                </div>
                <div>
                    <a asp-controller= "Projects" asp-action="Index">Volver a la lista</a>
                </div>
                @*<script>
                    function skipPublication(parametroString) {
                        window.location.href = '@Url.Action("Skip", "Publications")?parametro=' + encodeURIComponent(parametroString);
                    }
                </script>*@

                <!-- Modal -->
                <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content d-flex justify-content-center">
                            <div class="modal-header">
                                <h4 class="modal-title">Publicación guardada</h4>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <p>¿Desea agregar otra publicación?</p>
                            </div>
                            <div class="modal-footer">
                                @*<input type="submit" value="Create" class="btn btn-primary" />*@
                                <button type="submit" value="Create" class="btn btn-warning">Agregar otra</button>
                                <button asp-action="AddToProyect" asp-controller="Publications" type="submit" class="btn btn-primary">No</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        
        </div>
    </div>
    
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Asegúrate de incluir jQuery -->

<script>
    $(document).ready(function () {
        // Función para verificar si el formulario está completo
        $('#btnGuardar').prop('disabled', true); // Disable button by default

        function checkFormCompletion() {
            var isComplete = true;
            $('input, select, textarea').each(function () {
                if ($(this).is(':visible')) {
                    if ($(this).val() === '') {
                        isComplete = false;
                        return false; // Sale del bucle si encuentra un campo vacío
                    }
                }
            });

            // Actualiza el estado del botón
            if (isComplete) {
                $('#btnGuardar').prop('disabled', false);
            } else {
                $('#btnGuardar').prop('disabled', true);
            }
        }

        // Verificar el estado del formulario en cada cambio de campo
        $('input, select, textarea').on('input change', function () {
            checkFormCompletion();
        });
    });
</script>

<script type="text/javascript">
    // Script para agregar o eliminar textfield para autor
    $(document).ready(function () {
        var html = '<tr><td><input class="form-control" type="text" name="PublicationAuthor" required></td><td><input class="btn btn-danger" id="remove" type="button" name="remove" value="X" tabindex="-1"></td></tr>';
        var max = 10;
        var x = 1;
        // Agregar fila
        $("#add").click(function () {
            if (x <= max) {
                $("#table_field").append(html);
                x++;
            }
        })
        // Borrar fila
        $("#table_field").on('click', '#remove', function () {
            if (x > 1) {
                $(this).closest('tr').remove();
                x--;
            }
        })
    })
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
