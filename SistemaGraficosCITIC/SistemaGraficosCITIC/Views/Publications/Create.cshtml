@model PublicationModel

@{
    ViewData["Title"] = "Create";
    var projectId = ViewData["projectId"] as string;
}
<div>Project ID: @projectId</div>
<h1>Create</h1>

<h4>Publication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PublicationTitle" class="control-label"></label>
                <input asp-for="PublicationTitle" class="form-control" />
                <span asp-validation-for="PublicationTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationDate" class="control-label"></label>
                <input asp-for="PublicationDate" class="form-control" />
                <span asp-validation-for="PublicationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationReference" class="control-label"></label>
                <input asp-for="PublicationReference" class="form-control" />
                <span asp-validation-for="PublicationReference" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PublicationType" class="control-label"></label>
                <input asp-for="PublicationType" class="form-control" />
                <span asp-validation-for="PublicationType" class="text-danger"></span>
            </div>
            <div class="form-group" type="hidden">
                <label type="hidden"  asp-for="ProjectId" class="control-label"></label>
                <input type="hidden" asp-for="ProjectId" class="form-control" value="@projectId" />
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
