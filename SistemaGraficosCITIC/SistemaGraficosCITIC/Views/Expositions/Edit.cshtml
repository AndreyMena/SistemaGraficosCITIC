@model SistemaGraficosCITIC.Models.Domain.Exposition

@{
  ViewData["Title"] = "Editar exposición";
}

<h1>Editar</h1>

<h4>Presentaciones</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Edit">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Id" />
      <div class="form-floating mt-3">
        <input name="Title" asp-for="Title" class="form-control" />
        <label asp-for="Title" class="control-label">Título</label>
        <span asp-validation-for="Title" class="text-danger"></span>
      </div>

      <div id="Date" class="form-floating mt-3">
        <input type="Date" asp-for="Date" class="form-control" />
        <label asp-for="Date" class="control-label">Fecha</label>
        <span asp-validation-for="Date" class="text-danger"></span>
      </div>

      <div class="form-floating mt-3">
        <input name="Location" asp-for="Location" class="form-control" />
        <label asp-for="Location" class="control-label">Lugar</label>
        <span asp-validation-for="Location" class="text-danger"></span>
      </div>

      <div class="form-floating mt-3">
        <input name="Context" asp-for="Context" class="form-control" />
        <label asp-for="Context" class="control-label">Contexto</label>
        <span asp-validation-for="Context" class="text-danger"></span>
      </div>

      <div class="form-floating mt-3">
        <input name="Speaker" asp-for="Speaker" class="form-control" />
        <label asp-for="Speaker" class="control-label">Presentador</label>
        <span asp-validation-for="Speaker" class="text-danger"></span>
      </div>

      <div class="form-floating mt-3">
        <input name="Participants" asp-for="Participants" class="form-control" />
        <label asp-for="Participants" class="control-label">Participantes</label>
        <span asp-validation-for="Participants" class="text-danger"></span>
      </div>
      <div class="form-floating mt-3" type="hidden">
        <input type="hidden" asp-for="ProjectId" class="form-control" />
      </div>
      <div class="form-group mt-3">
        <input id="btnGuardar" type="submit" value="Guardar" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<div class="mt-3">
  <a asp-action="Index" asp-controller="Projects">Volver a la lista</a>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Asegúrate de incluir jQuery -->

<script>
  $(document).ready(function () {
    // Función para verificar si el formulario está completo
    $('#btnGuardar').prop('disabled', true); // Disable button by default

    function checkFormCompletion() {
      var isComplete = true;
      $('input, select, textarea').each(function () {
        if ($(this).is(':visible')) {
          if ($(this).val() === '') {
            isComplete = false;
            return false; // Sale del bucle si encuentra un campo vacío
          }
        }
      });

      // Actualiza el estado del botón
      if (isComplete) {
        $('#btnGuardar').prop('disabled', false);
      } else {
        $('#btnGuardar').prop('disabled', true);
      }
    }

    // Verificar el estado del formulario en cada cambio de campo
    $('input, select, textarea').on('input change', function () {
      checkFormCompletion();
    });
  });
</script>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}
