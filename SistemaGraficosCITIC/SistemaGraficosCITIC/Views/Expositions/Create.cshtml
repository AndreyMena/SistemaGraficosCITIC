@model PublicationModel

@{
    ViewData["Title"] = "Create";
    var project = ViewContext.RouteData.Values["projectId"];
}

<div class="container">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <h2>Create Project</h2>
    <p>Step 3</p>

    <div class="progress mt-3" role="progressbar" aria-label="Basic example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
        <div class="progress-bar" style="width: 75%"></div>
    </div>

    <hr />

    <h5>Expositions</h5>

    <div class="form-floating mt-3">
        <input type="Date" class="form-control" />
        <label class="control-label">Date</label>
    </div>

    <div class="form-floating mt-3">
        <input class="form-control" />
        <label class="control-label">Reference</label>
    </div>

    <div class="form-floating mt-3">
        <input class="form-control" />
        <label class="control-label">Context</label>
    </div>

    <div class="form-floating mt-3">
        <button type="button" class="btn btn-warning" onclick="">Skip (No expositions)</button>
        <button type="button" class="btn btn-primary" onclick="">Save</button>
    </div>

</div>

