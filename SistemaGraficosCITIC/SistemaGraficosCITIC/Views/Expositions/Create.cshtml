@model ExpositionModel

@{
    ViewData["Title"] = "Create";
    var projectId = ViewData["projectId"] as string;
}

<div class="container">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <h2>Create Project</h2>
    <p>Step 3</p>

    <div class="progress mt-3" role="progressbar" aria-label="Basic example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
        <div class="progress-bar" style="width: 75%"></div>
    </div>

    <hr />

    <h5>Expositions</h5>

    <form asp-action="Create">

        <div class="form-floating mt-3">
            <input value="" asp-for="ExpositionDate" type="Date" class="form-control" />
            <label class="control-label">Date</label>
        </div>

        <div class="form-floating mt-3">
            <input value="" asp-for="ExpositionLocation" class="form-control" />
            <label class="control-label">Location</label>
        </div>

        <div class="form-floating mt-3">
            <input value="" asp-for="ExpositionContext" class="form-control" />
            <label class="control-label">Context</label>
        </div>

        <div class="form-floating mt-3" type="hidden">
            <input type="hidden" asp-for="ProjectId" class="form-control" value="@projectId" />
        </div>

        <div class="form-floating mt-3">
            <button type="button" class="btn btn-warning" href="">Skip (No expositions)</button>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Save</button>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content d-flex justify-content-center">
                    <div class="modal-header">
                        <h4 class="modal-title">Exposition saved</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Do you wish to continue or add another Exposition?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" value="Create" class="btn btn-warning">Add another</button>
                        <button asp-action="AddContinue" value="Create" asp-controller="Expositions" type="submit" class="btn btn-primary">Continue</button>
                    </div>
                </div>
            </div>
        </div>

    </form>

</div>







@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
