@model ProductModel

@{
    ViewData["Title"] = "Create";
    var projectId = ViewData["projectId"] as string;
}

<div class="container">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <h2>Create Project</h2>
    <p>Step 4</p>

    <div class="progress mt-3" role="progressbar" aria-label="Basic example" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
        <div class="progress-bar" style="width: 99%"></div>
    </div>

    <hr />

    <h5>Products</h5>

    <form asp-action="Create">

        <div class="form-floating mt-3">
            <input value="" asp-for="ProductName" class="form-control" />
            <label class="control-label">Name</label>
        </div>

        <div class="form-floating mt-3">
            <input value="" asp-for="ProductDescription" class="form-control" />
            <label class="control-label">Description</label>
        </div>

        <div class="form-floating mt-3">
            <input value="" asp-for="ProductState" class="form-control" />
            <label class="control-label">State</label>
        </div>

        <div class="form-group mt-3">
            <input asp-for="ProductMarketable" id="CheckBoxActive" type="checkbox" />
            <label class="control-label">Is it marketable?</label>
            <span class="text-danger"></span>
        </div>

        <div class="form-floating mt-3">
            <input value="" asp-for="ProductLicense" class="form-control" />
            <label class="control-label">License</label>
        </div>

        <div class="form-floating mt-3" type="hidden">
            <input type="hidden" asp-for="ProjectId" class="form-control" value="@projectId" />
        </div>

        <div class="form-floating mt-3">
            <input type="button" class="btn btn-warning" value="Skip (No products)" onclick="location.href='@Url.Action("Skip", "Products", new { projectId=@projectId })'" />
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Save</button>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content d-flex justify-content-center">
                    <div class="modal-header">
                        <h4 class="modal-title">Product saved</h4>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Do you wish to continue or add another Product?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" value="Create" class="btn btn-warning">Add another</button>
                        <button asp-action="AddContinue" value="Create" asp-controller="Products" type="submit" class="btn btn-primary">Continue</button>
                    </div>
                </div>
            </div>
        </div>

    </form>

</div>

