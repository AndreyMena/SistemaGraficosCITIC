@model SistemaGraficosCITIC.Models.Domain.Product
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://getbootstrap.com/docs/5.3/assets/css/docs.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
@{
  ViewData["Title"] = "Editar producto";
}

<h1>Editar</h1>

<h4>Producto</h4>
<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Edit">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <input type="hidden" asp-for="Id" />
      <div class="form-floating mt-3">
        <input asp-for="Name" class="form-control" />
        <label asp-for="Name" class="control-label">Nombre</label>
        <span asp-validation-for="Name" class="text-danger"></span>
      </div>

      <div class="form-floating mt-3">
        <input asp-for="Description" class="form-control" />
        <label asp-for="Description" class="control-label">Descripción</label>
        <span asp-validation-for="Description" class="text-danger"></span>
      </div>

      <div class="form-floating mt-3">
        <input asp-for="State" class="form-control" />
        <label asp-for="State" class="control-label">Estado</label>
        <span asp-validation-for="State" class="text-danger"></span>
      </div>

      <div class="form-floating mt-3">
        <select asp-for="Marketable" class="form-select" aria-label="Default select example">
          <option value="Comercializable">Comercializable</option>
          <option value="No comercializable">No comercializable</option>
        </select>
        <label class="form-label">Comercializable?</label>
      </div>
      @*
      <div class="form-group mt-3">
      <input asp-for="Marketable" id="CheckBoxActive" type="checkbox" />
      <label class="control-label">¿Es comercializable?</label>
      <span class="text-danger"></span>
      </div>No comercializable
      *@
      <div class="form-floating mt-3">
        <input asp-for="License" class="form-control" />
        <label asp-for="License" class="control-label">Licencia</label>
        <span asp-validation-for="License" class="text-danger"></span>
      </div>
      <div class="form-floating mt-3" type="hidden">
        <input type="hidden" asp-for="ProjectId" class="form-control" />
      </div>
      <div class="form-group mt-3">
        <input id="btnGuardar" type="submit" value="Guardar" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Asegúrate de incluir jQuery -->

<script>
  $(document).ready(function () {
    // Función para verificar si el formulario está completo
    $('#btnGuardar').prop('disabled', true); // Disable button by default

    function checkFormCompletion() {
      var isComplete = true;
      $('input, select, textarea').each(function () {
        if ($(this).is(':visible')) {
          if ($(this).val() === '') {
            isComplete = false;
            return false; // Sale del bucle si encuentra un campo vacío
          }
        }
      });

      // Actualiza el estado del botón
      if (isComplete) {
        $('#btnGuardar').prop('disabled', false);
      } else {
        $('#btnGuardar').prop('disabled', true);
      }
    }

    // Verificar el estado del formulario en cada cambio de campo
    $('input, select, textarea').on('input change', function () {
      checkFormCompletion();
    });
  });
</script>

<div class="mt-3">
  <a asp-action="Index" asp-controller="Projects">Volver a la lista</a>
</div>

