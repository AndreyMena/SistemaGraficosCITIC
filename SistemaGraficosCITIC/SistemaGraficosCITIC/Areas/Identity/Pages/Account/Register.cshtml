@page
@model RegisterModel
<!DOCTYPE html>
@{
    ViewData["Title"] = "Register";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" integrity="sha256-h20CPZ0QyXlBuAw7A+KluUYx/3pK+c7lYEpqLTlxjYQ=" crossorigin="anonymous" />
    <link rel="stylesheet" href="\css\LoginStyle.css" />
    <title>Registro</title>
</head>
<body>
    <div class="login-page">
        <div class="formLogin">
            <section>
                <img src="\Images\Logos\logo-login.svg" class="image-logo" data-src-small="\Images\Logos\logo-login.svg" id="logo" alt="Logo">
                <form class="registerForm" id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating mt-3">
                        <input asp-for="Input.Name" id="Name" class="form-control" autocomplete="nombre" aria-required="true" />
                        <label asp-for="Input.Name" class="form-label">Nombre</label>
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-3">
                        <input asp-for="Input.Lastname" id="Lastname" class="form-control" autocomplete="apellido" aria-required="true" />
                        <label asp-for="Input.Lastname" class="form-label">Apellido</label>
                        <span asp-validation-for="Input.Lastname" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-3">
                        <input asp-for="Input.Email" id="Email" class="form-control" autocomplete="email" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label">Correo</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-3">
                        <select class="form-select" asp-for="Input.Type" aria-label="Default select example" >
                            @foreach(var item in Model.typeList)
                            {
                                <option value="@item.Value">@item.Value</option>
                            }
                        </select>
                        <label asp-for="Input.Type" class="form-label">Tipo de investigador</label>
                        <span asp-validation-for="Input.Type" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-3">
                        <input asp-for="Input.Password" id="Contrasena" class="form-control" autocomplete="contraseña" aria-required="true" />
                        <span id=ojo1 onclick="myFunction(this)" class="fa fa-fw fa-eye password-icon show-password"></span>
                        <label asp-for="Input.Password" class="form-label">Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-floating mt-3">
                        <input asp-for="Input.ConfirmPassword" id="Confirm-contrasena" class="form-control" autocomplete="new-password" aria-required="true" />
                        <span id=ojo2 onclick="myFunction2(this)" class="fa fa-fw fa-eye password-icon show-password"></span>
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar contraseña</label>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrarse</button>
                    </div>
                    <div>
                        <a asp-page="./Login" class="registerButtom mt-2" asp-route-returnUrl="@Model.ReturnUrl">Iniciar sesión</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
</body>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script>
    jQuery('#ojo1').on('click', function () {
        jQuery('#Contrasena').attr('type', function (index, attr) {
            return attr == 'text' ? 'password' : 'text';
        })
    })
</script>
<script>
    function myFunction(x) {
        x.classList.toggle("fa-eye-slash");
    }
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script>
    jQuery('#ojo2').on('click', function () {
        jQuery('#Confirm-contrasena').attr('type', function (index, attr) {
            return attr == 'text' ? 'password' : 'text';
        })
    })
</script>
<script>
    function myFunction2(x) {
        let eye2 = document.getElementById(this.id);
        x.classList.toggle("fa-eye-slash");
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
